{
    "root": true,
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "no-console": "off",
        "no-var": "error",
        "prefer-const": "error",
        "no-return-await": "error",
        "no-async-promise-executor": "error",
        "no-promise-executor-return": "error",
        "prefer-promise-reject-errors": "error"
    },
    "parserOptions": {
        "ecmaVersion": 2022,
        "ecmaFeatures": {
            "jsx": true
        }
    }
}