    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "options",
            "items": {
                "icalUrl": {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "ical url"
                },
                "nextTextTemplate": {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "text template (next)"
                },
                "_ioBrokerKursBanner": {
                    "newLine": true,
                    "type": "staticImage",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "href": "https://haus-automatisierung.com/iobroker-kurs/?refid=iobroker-trashschedule",
                    "src": "https://haus-automatisierung.com/images/ads/ioBroker-Kurs.png"
                }
            }
        },
        "_advanced": {
            "type": "panel",
            "label": "birthdays",
            "items": {
                "birthdays": {
                    "type": "table",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "birthdays",
                    "items": [
                        {
                            "type": "text",
                            "attr": "name",
                            "width": "45%",
                            "title": "name",
                            "filter": true,
                            "sort": true,
                            "default": ""
                        },
                        {
                            "type": "number",
                            "attr": "day",
                            "min": 1,
                            "max": 31,
                            "width": "15%",
                            "title": "day",
                            "filter": false,
                            "sort": false,
                            "default": ""
                        },
                        {
                            "type": "number",
                            "attr": "month",
                            "min": 1,
                            "max": 12,
                            "width": "15%",
                            "title": "month",
                            "filter": false,
                            "sort": false,
                            "default": ""
                        },
                        {
                            "type": "number",
                            "attr": "year",
                            "min": 1900,
                            "max": 2100,
                            "width": "15%",
                            "title": "year",
                            "filter": false,
                            "sort": false,
                            "default": ""
                        }
                    ]
                }
            }
        }
    }
}